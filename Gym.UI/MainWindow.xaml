<Window x:Class="Gym.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gym.UI"
        xmlns:views="clr-namespace:Gym.UI.Views"
        xmlns:viewModels="clr-namespace:Gym.UI.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="750" Width="1200" WindowState="Maximized"
        Background="#6B46C1"
        Icon="Resources/GymLogo.ico"
        FlowDirection="{Binding FlowDirection}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:MembershipTypeDisplayConverter x:Key="MembershipTypeDisplayConverter"/>
            <local:BoolToFlowDirectionConverter x:Key="BoolToFlowDirectionConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Simplified Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradientBrush}" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Modern Rounded Back Button -->
                <Button Grid.Column="0" Command="{Binding ShowMainMenuCommand}" 
                        Visibility="{Binding IsNotMainMenu, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Width="60" Height="40" Margin="0,0,20,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="20" Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="3" BlurRadius="12" Opacity="0.3" Color="#000000"/>
                                </Border.Effect>
                                <Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M12,20 L4,12 L12,4" 
                                              Stroke="#F5B800" StrokeThickness="2.5" 
                                              StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                              Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="رجوع" FontSize="12" FontWeight="Bold" 
                                                   Foreground="#F5B800" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FFF8E1"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.4" Color="#F5B800"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.96" ScaleY="0.96"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- App Title -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Border Width="40" Height="40" Background="White" CornerRadius="20" Margin="0,0,12,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="2" BlurRadius="8" Opacity="0.3" Color="#000000"/>
                        </Border.Effect>
                        <Image Source="Resources/GymLogo.jpg" 
                               Stretch="UniformToFill" 
                               Margin="2"/>
                    </Border>
                    <TextBlock Text="Mambela Gym"
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Language Controls -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding LanguageLabel}" 
                               Foreground="White" FontWeight="SemiBold" 
                               VerticalAlignment="Center" Margin="0,0,16,0" Opacity="0.9"/>
                    <Border Background="White" CornerRadius="20" Padding="4">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="{Binding ArabicLabel}" 
                                    Command="{Binding SetLanguageCommand}" CommandParameter="ar"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="Transparent" Foreground="{StaticResource TextPrimaryBrush}"
                                    Padding="16,8" Margin="2" FontSize="12" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="16" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F1F5F9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                            <Button Content="{Binding EnglishLabel}" 
                                    Command="{Binding SetLanguageCommand}" CommandParameter="en"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="Transparent" Foreground="{StaticResource TextPrimaryBrush}"
                                    Padding="16,8" Margin="2" FontSize="12" FontWeight="SemiBold">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="16" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#F1F5F9"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </Border>

                    <!-- Zoom Controls -->
                    <Border Background="White" CornerRadius="20" Padding="4" Margin="8,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="-" Command="{Binding ZoomOutCommand}"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="Transparent" Foreground="{StaticResource TextPrimaryBrush}"
                                    Padding="12,6" Margin="2" FontSize="14"/>
                            <TextBlock Text="{Binding ZoomScale, StringFormat= {}{0:P0}}" VerticalAlignment="Center" Margin="8,0" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <Button Content="+" Command="{Binding ZoomInCommand}" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="Transparent" Foreground="{StaticResource TextPrimaryBrush}"
                                    Padding="12,6" Margin="2" FontSize="14"/>
                            <Button Content="Reset" Command="{Binding ResetZoomCommand}" 
                                    Style="{StaticResource ModernButtonStyle}"
                                    Background="Transparent" Foreground="{StaticResource TextPrimaryBrush}"
                                    Padding="12,6" Margin="2" FontSize="12"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundBrush}" Padding="24">
            <ContentControl Content="{Binding CurrentViewModel}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewModels:MainMenuViewModel}">
                        <views:SimpleMenuView>
                            <views:SimpleMenuView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:SimpleMenuView.LayoutTransform>
                        </views:SimpleMenuView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:TraineeViewModel}">
                        <views:TraineeView>
                            <views:TraineeView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:TraineeView.LayoutTransform>
                        </views:TraineeView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:MembershipViewModel}">
                        <views:MembershipView>
                            <views:MembershipView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:MembershipView.LayoutTransform>
                        </views:MembershipView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:VisitViewModel}">
                        <views:VisitView>
                            <views:VisitView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:VisitView.LayoutTransform>
                        </views:VisitView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:AdditionalServiceViewModel}">
                        <views:AdditionalServiceView>
                            <views:AdditionalServiceView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:AdditionalServiceView.LayoutTransform>
                        </views:AdditionalServiceView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:ExpenseRevenueViewModel}">
                        <views:ExpenseRevenueView>
                            <views:ExpenseRevenueView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:ExpenseRevenueView.LayoutTransform>
                        </views:ExpenseRevenueView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:FinancialDetailsViewModel}">
                        <views:FinancialDetailsView>
                            <views:FinancialDetailsView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:FinancialDetailsView.LayoutTransform>
                        </views:FinancialDetailsView>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewModels:DashboardViewModel}">
                        <views:DashboardView>
                            <views:DashboardView.LayoutTransform>
                                <ScaleTransform ScaleX="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                ScaleY="{Binding DataContext.ZoomScale, RelativeSource={RelativeSource AncestorType=Window}}"/>
                            </views:DashboardView.LayoutTransform>
                        </views:DashboardView>
                    </DataTemplate>
                </ContentControl.Resources>
            </ContentControl>
        </Border>
    </Grid>
</Window>
