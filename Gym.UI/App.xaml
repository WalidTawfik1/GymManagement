<Application x:Class="Gym.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Gym.UI">
    <Application.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <local:BoolToStringConverter x:Key="BoolToStringConverter"/>
        <local:MembershipTypeDisplayConverter x:Key="MembershipTypeDisplayConverter"/>
        <local:BoolToFlowDirectionConverter x:Key="BoolToFlowDirectionConverter"/>
        <local:DateOnlyToDateTimeConverter x:Key="DateOnlyToDateTimeConverter"/>
        <local:DateOnlyToStringConverter x:Key="DateOnlyToStringConverter"/>
        <local:PercentageToColorConverter x:Key="PercentageToColorConverter"/>

        <!-- Global defaults for crisp rendering on laptop screens -->
        <Style TargetType="FrameworkElement">
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>
        <Style TargetType="TextElement">
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
    </Application.Resources>
</Application>
