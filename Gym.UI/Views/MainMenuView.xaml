<UserControl x:Class="Gym.UI.Views.MainMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gym.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Welcome Header -->
        <Border Grid.Row="0" Background="{StaticResource ChampionGradientBrush}" 
                CornerRadius="16" Margin="0,0,0,32" Padding="40,32">
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Welcome to Mambela Gym" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="{StaticResource TextOnPrimaryBrush}" 
                           TextAlignment="Center"
                           Margin="0,0,0,8"/>
                <TextBlock Text="Choose the section you want to access" 
                           FontSize="18" FontWeight="Medium" 
                           Foreground="{StaticResource TextOnPrimaryBrush}" 
                           TextAlignment="Center"
                           Opacity="0.9"/>
            </StackPanel>
        </Border>
        
        <!-- Menu Grid -->
        <Grid Grid.Row="1" MaxWidth="1000" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Trainees Management Card -->
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding ShowTraineesCommand}" 
                    Background="Transparent" BorderThickness="0" Padding="16" Margin="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="2"
                                BorderBrush="{StaticResource BorderLightBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Icon for Trainees -->
                                <Border Width="80" Height="80" Background="White" 
                                        CornerRadius="40" Margin="0,0,0,16">
                                    <Image Source="../Resources/trainer.png" Width="50" Height="50" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Trainee Management" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Trainee and membership management" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="8" BlurRadius="25" Opacity="0.15" Color="{StaticResource PrimaryBrush}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <!-- Store/Cafe Management Card -->
            <Button Grid.Row="0" Grid.Column="1" Command="{Binding ShowMembershipsCommand}" 
                    Background="Transparent" BorderThickness="0" Padding="16" Margin="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="2"
                                BorderBrush="{StaticResource BorderLightBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Icon for Membership -->
                                <Border Width="80" Height="80" Background="White" 
                                        CornerRadius="40" Margin="0,0,0,16">
                                    <Image Source="../Resources/member-card.png" Width="50" Height="50" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Membership Management" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Membership and subscription management" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="8" BlurRadius="25" Opacity="0.15" Color="{StaticResource AccentBrush}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <!-- Subscriptions & Customers Card -->
            <Button Grid.Row="0" Grid.Column="2" Command="{Binding ShowVisitsCommand}" 
                    Background="Transparent" BorderThickness="0" Padding="16" Margin="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="2"
                                BorderBrush="{StaticResource BorderLightBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Icon for Visits -->
                                <Border Width="80" Height="80" Background="White" 
                                        CornerRadius="40" Margin="0,0,0,16">
                                    <Image Source="../Resources/Adobe Express - file.png" Width="50" Height="50" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Visits Management" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Visit tracking and attendance" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="8" BlurRadius="25" Opacity="0.15" Color="{StaticResource SuccessBrush}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{StaticResource SuccessBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <!-- Settings & Configuration Card -->
            <Button Grid.Row="1" Grid.Column="0" Command="{Binding ShowExpenseRevenueCommand}" 
                    Background="Transparent" BorderThickness="0" Padding="16" Margin="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="2"
                                BorderBrush="{StaticResource BorderLightBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Icon for Expense/Revenue -->
                                <Border Width="80" Height="80" Background="White" 
                                        CornerRadius="40" Margin="0,0,0,16">
                                    <Image Source="../Resources/revenue.png" Width="50" Height="50" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="إدارة المصروفات والإيرادات" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="متابعة المصروفات وحساب الأرباح" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="8" BlurRadius="25" Opacity="0.15" Color="{StaticResource InfoBrush}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{StaticResource InfoBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <!-- WhatsApp & SMS Card -->
            <Button Grid.Row="1" Grid.Column="1" Background="Transparent" BorderThickness="0" Padding="16" Margin="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="2"
                                BorderBrush="{StaticResource BorderLightBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Icon Placeholder for Communication -->
                                <Border Width="80" Height="80" Background="#25D366" 
                                        CornerRadius="40" Margin="0,0,0,16">
                                    <TextBlock Text="💬" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="WhatsApp &amp; SMS" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Send messages and notifications" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="8" BlurRadius="25" Opacity="0.15" Color="#25D366"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="#25D366"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            
            <!-- Staff Training Card -->
            <Button Grid.Row="1" Grid.Column="2" Background="Transparent" BorderThickness="0" Padding="16" Margin="16">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{StaticResource CardBrush}" 
                                CornerRadius="20" 
                                Padding="{TemplateBinding Padding}"
                                BorderThickness="2"
                                BorderBrush="{StaticResource BorderLightBrush}">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" BlurRadius="20" Opacity="0.1" Color="#000000"/>
                            </Border.Effect>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <!-- Icon Placeholder for Training -->
                                <Border Width="80" Height="80" Background="{StaticResource WarningBrush}" 
                                        CornerRadius="40" Margin="0,0,0,16">
                                    <TextBlock Text="🏋️" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Client Training" FontSize="18" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Training and trainer management" FontSize="12" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect ShadowDepth="8" BlurRadius="25" Opacity="0.15" Color="{StaticResource WarningBrush}"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="{StaticResource WarningBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</UserControl>
