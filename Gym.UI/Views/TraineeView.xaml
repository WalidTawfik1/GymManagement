<UserControl x:Class="Gym.UI.Views.TraineeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="{Binding FlowDirection}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0" Background="#6B46C1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header -->
        <Border Grid.Row="0" Background="Black" 
                Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="32" Height="32" Fill="White" Opacity="0.9" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding TraineeManagementLabel}" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="20" Padding="12,8" Opacity="0.9">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource SecondaryBrush}" Margin="0,0,8,0"/>
                            <TextBlock Text="إدارة المتدربين" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Trainee List Card -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}">
                <Grid FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20" FlowDirection="LeftToRight">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>   <!-- Refresh -->
                            <ColumnDefinition Width="*"/>      <!-- Spacer -->
                            <ColumnDefinition Width="Auto"/>   <!-- Search -->
                            <ColumnDefinition Width="*"/>      <!-- Spacer -->
                            <ColumnDefinition Width="Auto"/>   <!-- Title -->
                        </Grid.ColumnDefinitions>
                        <!-- Refresh Button -->
                        <Button Grid.Column="0" Content="{Binding RefreshLabel}" Command="{Binding LoadTraineesCommand}" 
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource InfoBrush}" Padding="16,8" FontSize="12" VerticalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                            <Ellipse Width="12" Height="12" Fill="White" Margin="0,0,6,0"/>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0891B2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <!-- Search Controls -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Width="240" Height="40" FlowDirection="RightToLeft"
                                     Text="{Binding SearchTraineeName, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}" Padding="8,4" Tag="ادخل اسم المتدرب"/>
                            <Button Content="بحث" Command="{Binding SearchTraineesCommand}" Margin="8,0,0,0"
                                    Style="{StaticResource ModernButtonStyle}" Height="32" Padding="16,4"/>
                        </StackPanel>
                        <!-- Title -->
                        <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="{Binding TraineesListLabel}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Ellipse Width="20" Height="20" Fill="{StaticResource SecondaryBrush}"/>
                        </StackPanel>
                    </Grid>
                    
                    <!-- Modern DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Trainees}" 
                              SelectedItem="{Binding SelectedTrainee}"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              FlowDirection="{Binding FlowDirection}">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridHeaderStyle}"/>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="الرقم" Binding="{Binding Id}" MinWidth="60" Width="SizeToHeader" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="2*" MinWidth="160" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="Margin" Value="16,0"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="رقم الهاتف" Binding="{Binding PhoneNumber}" MinWidth="120" Width="Auto" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="تاريخ الانضمام" Binding="{Binding JoinDate, StringFormat='{}{0:dd/MM/yyyy}'}" MinWidth="100" Width="Auto" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn Header="الإجراءات" MinWidth="120" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Command="{Binding DataContext.EditTraineeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding DataContext.EditLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    Padding="8,4" Margin="2" FontSize="11">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{StaticResource AccentBrush}" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#D97706"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            
                                            <Button Command="{Binding DataContext.DeleteTraineeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Content="{Binding DataContext.DeleteLabel, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Padding="8,4" Margin="2" FontSize="11">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{StaticResource DangerBrush}" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#DC2626"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="اخر تحديث" Binding="{Binding UpdatedAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" MinWidth="120" Width="Auto" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Add/Edit Form Card -->
            <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="12,0,12,0">
                <Grid FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Form Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                        <Ellipse Width="24" Height="24" Fill="{StaticResource SecondaryBrush}" Margin="0,0,12,0"/>
                        <TextBlock Text="{Binding AddNewTraineeLabel}" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Full Name Input -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,16">
                        <TextBlock Text="{Binding FullNameLabel}" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Phone Number Input -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,16">
                        <TextBlock Text="{Binding PhoneNumberLabel}" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Join Date Input (Only visible in edit mode) -->
                    <StackPanel Grid.Row="3" Margin="0,0,0,20"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="{Binding JoinDateLabel}" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding JoinDate, Mode=TwoWay, Converter={StaticResource DateOnlyToStringConverter}, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="4" Margin="0,0,0,16">
                        <Button Content="{Binding AddTraineeLabel}" Command="{Binding AddTraineeCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                Padding="20,12" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        
                        <Button Content="{Binding UpdateTraineeLabel}" Command="{Binding UpdateTraineeCommand}" 
                                Style="{StaticResource AccentButtonStyle}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                Padding="20,12" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        
                        <Button Content="{Binding ClearFormLabel}" Command="{Binding ClearFormCommand}" 
                                Background="{StaticResource TextMutedBrush}" Foreground="White"
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="20,12" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="5" IsIndeterminate="{Binding IsBusy}" 
                                 Style="{StaticResource ModernProgressBarStyle}" 
                                 Margin="0,16,0,0"/>
                </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>
