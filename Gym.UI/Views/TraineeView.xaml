<UserControl x:Class="Gym.UI.Views.TraineeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="{Binding FlowDirection}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="{Binding TraineeManagementLabel}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Trainee List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="{Binding TraineesListLabel}" FontSize="18" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <Button Content="{Binding RefreshLabel}" Command="{Binding LoadTraineesCommand}" Padding="10,5" Background="#3498DB" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Trainees}" 
                              SelectedItem="{Binding SelectedTrainee}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="White">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding DataContext.FullNameLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" Binding="{Binding FullName}" Width="*" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding DataContext.PhoneNumberLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" Binding="{Binding PhoneNumber}" Width="120" IsReadOnly="True"/>
                            <DataGridTextColumn Header="{Binding DataContext.JoinDateLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" Binding="{Binding JoinDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="140" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="{Binding DataContext.ActionsLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Content="{Binding DataContext.EditLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    Command="{Binding DataContext.EditTraineeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Margin="2" Padding="8,3" Background="#F39C12" Foreground="White" BorderThickness="0"/>
                                            <Button Content="{Binding DataContext.DeleteLabel, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    Command="{Binding DataContext.DeleteTraineeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Margin="2" Padding="8,3" Background="#E74C3C" Foreground="White" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Add/Edit Form -->
            <Border Grid.Column="1" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="{Binding AddNewTraineeLabel}" FontSize="16" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,10">
                        <TextBlock Text="{Binding FullNameLabel}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderBrush="#BDC3C7"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="{Binding PhoneNumberLabel}" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderBrush="#BDC3C7"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,10">
                        <Button Content="{Binding AddTraineeLabel}" Command="{Binding AddTraineeCommand}" 
                                Padding="15,8" Margin="0,0,0,5" Background="#27AE60" Foreground="White" BorderThickness="0"/>
                        <Button Content="{Binding UpdateTraineeLabel}" Command="{Binding UpdateTraineeCommand}" 
                                Padding="15,8" Margin="0,0,0,5" Background="#F39C12" Foreground="White" BorderThickness="0"/>
                        <Button Content="{Binding ClearFormLabel}" Command="{Binding ClearFormCommand}" 
                                Padding="15,8" Background="#95A5A6" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <ProgressBar Grid.Row="4" IsIndeterminate="{Binding IsBusy}" Height="4" Margin="0,10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>
