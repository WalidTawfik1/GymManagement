<Window x:Class="Gym.UI.Views.Dialogs.ModernDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" SizeToContent="WidthAndHeight"
        Background="Transparent" AllowsTransparency="True" ShowInTaskbar="False"
        Topmost="True" MinWidth="360" MinHeight="140" WindowStartupLocation="CenterOwner">
    <Grid ClipToBounds="True">

        <!-- Dialog container with shadow & subtle outline -->
<Border CornerRadius="18"
        Background="White"
        Padding="24"
        BorderBrush="Black"
        BorderThickness="2">
    <Grid FlowDirection="{Binding FlowDirection}">
        <Grid.Resources>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <Style TargetType="Button" x:Key="DialogButtonBase">
                <Setter Property="Background" Value="#F3F4F6"/>
                <Setter Property="Foreground" Value="#111827"/>
                <Setter Property="Padding" Value="20 6"/>
                <Setter Property="Margin" Value="0"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E5E7EB"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="Button" x:Key="PrimaryDialogButton" BasedOn="{StaticResource DialogButtonBase}">
                <Setter Property="Background" Value="#2563EB"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="10" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1D4ED8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 12">
            <Ellipse Width="32" Height="32" Fill="{Binding IconBrush}" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="Bold" Margin="12 0 0 0" VerticalAlignment="Center"/>
        </StackPanel>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock Text="{Binding Message}" TextWrapping="Wrap" FontSize="14"/>
        </ScrollViewer>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0"
                    FlowDirection="LeftToRight">
            <Button Content="{Binding CancelText}"
                    Visibility="{Binding IsConfirmation, Converter={StaticResource BoolToVis}}"
                    Margin="0 0 8 0"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource DialogButtonBase}"/>
            <Button Content="{Binding OkText}"
                    Command="{Binding OkCommand}"
                    Style="{StaticResource PrimaryDialogButton}"/>
        </StackPanel>
    </Grid>
</Border>
    </Grid>
</Window>
