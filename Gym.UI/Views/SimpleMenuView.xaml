<UserControl x:Class="Gym.UI.Views.SimpleMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    
    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#F5B800" Padding="20">
            <TextBlock Text="Champions Mambela Gym" FontSize="24" FontWeight="Bold" 
                       Foreground="Black" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Menu Grid -->
        <Grid Grid.Row="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Trainee Management Button -->
            <Button Grid.Row="0" Grid.Column="0" Command="{Binding ShowTraineesCommand}"
                    Background="White" BorderThickness="2" BorderBrush="#F5B800"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="../Resources/trainer.png" Width="64" Height="64" Margin="0,0,0,10"/>
                    <TextBlock Text="Trainee Management" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>
            
            <!-- Membership Management Button -->
            <Button Grid.Row="0" Grid.Column="2" Command="{Binding ShowMembershipsCommand}"
                    Background="White" BorderThickness="2" BorderBrush="#F5B800"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="../Resources/member-card.png" Width="64" Height="64" Margin="0,0,0,10"/>
                    <TextBlock Text="Membership Management" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>
            
            <!-- Visits Management Button -->
            <Button Grid.Row="0" Grid.Column="4" Command="{Binding ShowVisitsCommand}"
                    Background="White" BorderThickness="2" BorderBrush="#F5B800"
                    Padding="20">
                <StackPanel HorizontalAlignment="Center">
                    <Image Source="../Resources/Adobe Express - file.png" Width="64" Height="64" Margin="0,0,0,10"/>
                    <TextBlock Text="Visits Management" FontSize="16" FontWeight="Bold" 
                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Button>
            
        </Grid>
    </Grid>
</UserControl>
