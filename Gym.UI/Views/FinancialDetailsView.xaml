<UserControl x:Class="Gym.UI.Views.FinancialDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gym.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             FlowDirection="{Binding FlowDirection}">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid Margin="0" Background="#6B46C1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header Section -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryGradientBrush}" 
                CornerRadius="20,20,0,0" Padding="16,20" Margin="8,8,8,16">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="8" BlurRadius="24" Opacity="0.15" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Back Button -->
                <Button Grid.Column="0" Command="{Binding GoBackCommand}" 
                        Width="60" Height="35" Margin="0,0,12,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="White" CornerRadius="18" Padding="0">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.15" Color="#000000"/>
                                </Border.Effect>
                                <Grid>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <Path Data="M12,20 L4,12 L12,4" 
                                              Stroke="#F59E0B" StrokeThickness="2" 
                                              StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                                              Margin="0,0,6,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="رجوع" FontSize="11" FontWeight="Bold" 
                                                   Foreground="#F59E0B" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FEF3C7"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="6" BlurRadius="20" Opacity="0.3" Color="#F59E0B"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Title -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" FlowDirection="LeftToRight">
                    <Border Background="White" CornerRadius="14" Padding="8,6" Margin="0,0,10,0">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="6" Opacity="0.12" Color="#000000"/>
                        </Border.Effect>
                        <Ellipse Width="20" Height="20" Fill="#F59E0B" Opacity="0.9"/>
                    </Border>
                    <Border Background="#40FFFFFF" CornerRadius="12" Padding="14,8">
                        <Border.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="8" Opacity="0.08" Color="#000000"/>
                        </Border.Effect>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding SelectedMonthName}" 
                                       FontSize="18" FontWeight="Bold" 
                                       Foreground="White" VerticalAlignment="Center"/>
                            <TextBlock Text=" تفاصيل الإيرادات والمصروفات لشهر" 
                                       FontSize="18" FontWeight="Bold" 
                                       Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Export Button -->
                <Button Grid.Column="2" Content="تصدير التقرير" 
                        Command="{Binding ExportFinancialReportCommand}"
                        Style="{StaticResource ModernButtonStyle}" 
                        Background="White"
                        Padding="10,6" FontSize="10" VerticalAlignment="Center"
                        HorizontalAlignment="Right" Margin="0,0,0,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="16" Padding="{TemplateBinding Padding}">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" BlurRadius="12" Opacity="0.15" Color="#000000"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock Text="📊" FontSize="10" Margin="0,0,4,0" Foreground="#F59E0B"/>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="#F59E0B"/>
                                </StackPanel>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7C3AED"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect ShadowDepth="6" BlurRadius="20" Opacity="0.3" Color="#7C3AED"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="RenderTransform">
                                        <Setter.Value>
                                            <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Border Grid.Row="1" Background="White" 
                CornerRadius="20,20,16,16" Padding="12" Margin="8,0,8,8">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="6" BlurRadius="20" Opacity="0.08" Color="#000000"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <!-- Financial Details List -->
                <DataGrid Grid.Row="0" ItemsSource="{Binding FinancialDetails}" 
                          Style="{StaticResource ModernDataGridStyle}"
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          FlowDirection="RightToLeft"
                          BorderThickness="1"
                          BorderBrush="#E5E7EB"
                          Background="White"
                          ScrollViewer.CanContentScroll="False"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          PreviewMouseWheel="DataGrid_PreviewMouseWheel"
                          Margin="0,0,0,8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="النوع" 
                                                Binding="{Binding Type}" 
                                                Width="100"
                                                HeaderStyle="{StaticResource ModernDataGridHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Margin" Value="4,2"/>
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="6,3"/>
                                        <Setter Property="FontSize" Value="10"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                <Setter Property="Foreground" Value="#059669"/>
                                                <Setter Property="Background" Value="#ECFDF5"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                                <Setter Property="Foreground" Value="#DC2626"/>
                                                <Setter Property="Background" Value="#FEF2F2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="الوصف" 
                                                Binding="{Binding Description}" 
                                                Width="*"
                                                HeaderStyle="{StaticResource ModernDataGridHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="Margin" Value="8,0"/>
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="FontSize" Value="11"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="المبلغ" 
                                                Binding="{Binding FormattedAmount}" 
                                                Width="120"
                                                HeaderStyle="{StaticResource ModernDataGridHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Padding" Value="6,3"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="True">
                                                <Setter Property="Foreground" Value="#059669"/>
                                                <Setter Property="Background" Value="#D1FAE5"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsIncome}" Value="False">
                                                <Setter Property="Foreground" Value="#DC2626"/>
                                                <Setter Property="Background" Value="#FEE2E2"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="التاريخ" 
                                                Binding="{Binding Date, StringFormat='dd/MM/yyyy'}" 
                                                Width="80"
                                                HeaderStyle="{StaticResource ModernDataGridHeaderStyle}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#6B7280"/>
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                
                <!-- Summary Section -->
                <Border Grid.Row="1" Background="#F8FAFC" CornerRadius="16" Padding="20" Margin="0,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="3" BlurRadius="16" Opacity="0.08" Color="#000000"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="8,0">
                            <TextBlock Text="إجمالي الإيرادات" FontSize="13" Foreground="#64748B" Margin="0,0,0,12" FontWeight="Medium" HorizontalAlignment="Center"/>
                            <Border Background="#059669" CornerRadius="16" Padding="20,12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.15" Color="#059669"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="+" FontSize="18" FontWeight="Bold" Foreground="White" 
                                               VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding TotalRevenue, StringFormat='{}{0:F0} ج.م'}" 
                                               FontSize="16" FontWeight="Bold" Foreground="White" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Margin="8,0">
                            <TextBlock Text="إجمالي المصروفات" FontSize="13" Foreground="#64748B" Margin="0,0,0,12" FontWeight="Medium" HorizontalAlignment="Center"/>
                            <Border Background="#DC2626" CornerRadius="16" Padding="20,12">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.15" Color="#DC2626"/>
                                </Border.Effect>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="-" FontSize="18" FontWeight="Bold" Foreground="White" 
                                               VerticalAlignment="Center" Margin="0,0,6,0"/>
                                    <TextBlock Text="{Binding TotalExpenses, StringFormat='{}{0:F0} ج.م'}" 
                                               FontSize="16" FontWeight="Bold" Foreground="White" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center" Margin="8,0">
                            <TextBlock Text="صافي الربح" FontSize="13" Foreground="#64748B" Margin="0,0,0,12" FontWeight="Medium" HorizontalAlignment="Center"/>
                            <Border CornerRadius="16" Padding="20,12">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsNetProfitPositive}" Value="True">
                                                <Setter Property="Background" Value="#059669"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.15" Color="#059669"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsNetProfitPositive}" Value="False">
                                                <Setter Property="Background" Value="#DC2626"/>
                                                <Setter Property="Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect ShadowDepth="4" BlurRadius="16" Opacity="0.15" Color="#DC2626"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock FontSize="18" FontWeight="Bold" Foreground="White" 
                                               VerticalAlignment="Center" Margin="0,0,6,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsNetProfitPositive}" Value="True">
                                                        <Setter Property="Text" Value="+"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding IsNetProfitPositive}" Value="False">
                                                        <Setter Property="Text" Value="-"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock FontSize="16" FontWeight="Bold" Foreground="White" 
                                               VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <Binding Path="NetProfit" StringFormat="{}{0:F0} ج.م"/>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
