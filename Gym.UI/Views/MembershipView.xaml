<UserControl x:Class="Gym.UI.Views.MembershipView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gym.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="{Binding FlowDirection}">
    <UserControl.Resources>
        <local:MembershipTypeDisplayConverter x:Key="MembershipTypeDisplayConverter"/>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#8E44AD" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="{Binding MembershipManagementLabel}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Membership List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <Grid Margin="15" FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" 
                                HorizontalAlignment="{Binding RightAlignment}"
                                FlowDirection="RightToLeft">
                        <TextBlock Text="قائمة العضويات" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Button Content="تحديث" Command="{Binding LoadMembershipsCommand}" 
                                Padding="10,5" Background="#8E44AD" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Memberships}" 
                              SelectedItem="{Binding SelectedMembership}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="White"
                              FlowDirection="{Binding FlowDirection}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="الرقم" Binding="{Binding Id}" Width="50" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="المتدرب" Binding="{Binding TraineeName}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="النوع" Binding="{Binding MembershipType, Converter={StaticResource MembershipTypeDisplayConverter}}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="البداية" Binding="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="90" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="النهاية" Binding="{Binding EndDate, StringFormat='{}{0:dd/MM/yyyy}'}" Width="90" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="الحصص" Binding="{Binding RemainingSessions}" Width="70" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="نشط" Width="80">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsActive}" IsEnabled="False" 
                                                  HorizontalAlignment="Center" FlowDirection="LeftToRight">
                                            <CheckBox.Template>
                                                <ControlTemplate TargetType="{x:Type CheckBox}">
                                                    <Border x:Name="border" BorderBrush="#BDC3C7" 
                                                            BorderThickness="1" Background="White" 
                                                            Width="16" Height="16" VerticalAlignment="Center"
                                                            HorizontalAlignment="Center">
                                                        <Path x:Name="checkMark" 
                                                              Data="M 0 2 L 0 4.8 L 4 8.8 L 12 0.8 L 12 0 L 4.5 7.5 Z"
                                                              Fill="White" Visibility="Collapsed" 
                                                              Stretch="Fill" Margin="2"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsChecked" Value="True">
                                                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                                            <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#27AE60"/>
                                                        </Trigger>
                                                        <Trigger Property="IsChecked" Value="False">
                                                            <Setter TargetName="border" Property="Background" Value="White"/>
                                                            <Setter TargetName="border" Property="BorderBrush" Value="#BDC3C7"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </CheckBox.Template>
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="الإجراءات" Width="150">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" FlowDirection="LeftToRight">
                                            <Button Content="تعديل" 
                                                    Command="{Binding DataContext.EditMembershipCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Margin="2" Padding="8,3" Background="#F39C12" Foreground="White" BorderThickness="0"/>
                                            <Button Content="حذف" 
                                                    Command="{Binding DataContext.DeleteMembershipCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Margin="2" Padding="8,3" Background="#E74C3C" Foreground="White" BorderThickness="0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Add/Edit Form -->
            <Border Grid.Column="1" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
                <Grid Margin="15" FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="إضافة عضوية جديدة" FontSize="16" FontWeight="Bold" 
                               Margin="0,0,0,15" 
                               HorizontalAlignment="{Binding CenterAlignment}"
                               FlowDirection="{Binding FlowDirection}"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,10" FlowDirection="{Binding FlowDirection}">
                        <TextBlock Text="رقم المتدرب:" FontWeight="Bold" Margin="0,0,0,5" 
                                   HorizontalAlignment="{Binding RightAlignment}"/>
                        <TextBox Text="{Binding TraineeIdInput, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" BorderBrush="#BDC3C7"
                                 TextAlignment="{Binding TextAlignment}"
                                 FlowDirection="{Binding FlowDirection}"
                                 Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                        <ComboBox ItemsSource="{Binding Trainees}" 
                                  SelectedValue="{Binding SelectedTraineeId}"
                                  SelectedValuePath="Id"
                                  DisplayMemberPath="FullName"
                                  Padding="8"
                                  FlowDirection="{Binding FlowDirection}"
                                  Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}" />
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,15" FlowDirection="{Binding FlowDirection}">
                        <TextBlock Text="نوع العضوية:" FontWeight="Bold" Margin="0,0,0,5" 
                                   HorizontalAlignment="{Binding RightAlignment}"/>
                        <ComboBox ItemsSource="{Binding MembershipTypes}" 
                                  SelectedItem="{Binding MembershipType}"
                                  Padding="8"
                                  FlowDirection="{Binding FlowDirection}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource MembershipTypeDisplayConverter}}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="3" Margin="0,0,0,10" 
                                FlowDirection="{Binding FlowDirection}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="تاريخ البداية:" FontWeight="Bold" Margin="0,0,0,5" 
                                   HorizontalAlignment="{Binding RightAlignment}"/>
                        <TextBox Text="{Binding StartDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                 Padding="8" BorderBrush="#BDC3C7"
                                 TextAlignment="{Binding TextAlignment}"
                                 FlowDirection="{Binding FlowDirection}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="4" Margin="0,0,0,10" 
                                FlowDirection="{Binding FlowDirection}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="تاريخ النهاية:" FontWeight="Bold" Margin="0,0,0,5" 
                                   HorizontalAlignment="{Binding RightAlignment}"/>
                        <TextBox Text="{Binding EndDate, StringFormat='{}{0:dd/MM/yyyy}'}" 
                                 Padding="8" BorderBrush="#BDC3C7"
                                 TextAlignment="{Binding TextAlignment}"
                                 FlowDirection="{Binding FlowDirection}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="5" Margin="0,0,0,10" 
                                FlowDirection="{Binding FlowDirection}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <TextBlock Text="الحصص المتبقية:" FontWeight="Bold" Margin="0,0,0,5" 
                                   HorizontalAlignment="{Binding RightAlignment}"/>
                        <TextBox Text="{Binding RemainingSessions, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" BorderBrush="#BDC3C7"
                                 TextAlignment="{Binding TextAlignment}"
                                 FlowDirection="{Binding FlowDirection}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="6" Margin="0,0,0,15" 
                                FlowDirection="{Binding FlowDirection}"
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}">
                        <CheckBox IsChecked="{Binding IsActive}" FontWeight="Bold" 
                                  HorizontalAlignment="{Binding RightAlignment}"
                                  FlowDirection="LeftToRight">
                            <CheckBox.Template>
                                <ControlTemplate TargetType="{x:Type CheckBox}">
                                    <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
                                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                Width="16" Height="16" VerticalAlignment="Center">
                                            <Path x:Name="checkMark" 
                                                  Data="M 0 2 L 0 4.8 L 4 8.8 L 12 0.8 L 12 0 L 4.5 7.5 Z"
                                                  Fill="White" Visibility="Collapsed" 
                                                  Stretch="Fill" Margin="2"/>
                                        </Border>
                                        <ContentPresenter Margin="5,0,0,0" VerticalAlignment="Center" 
                                                          Content="نشط" FlowDirection="RightToLeft"/>
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                            <Setter TargetName="border" Property="Background" Value="#27AE60"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="False">
                                            <Setter TargetName="border" Property="Background" Value="White"/>
                                            <Setter TargetName="border" Property="BorderBrush" Value="#BDC3C7"/>
                                            <Setter TargetName="border" Property="BorderThickness" Value="1"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="BorderBrush" Value="#8E44AD"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </CheckBox.Template>
                        </CheckBox>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="7" Margin="0,0,0,10" FlowDirection="LeftToRight">
                        <Button Content="إضافة عضوية" Command="{Binding AddMembershipCommand}" 
                                Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                Padding="15,8" Margin="0,0,0,5" Background="#27AE60" Foreground="White" BorderThickness="0"/>
                        <Button Content="تحديث عضوية" Command="{Binding UpdateMembershipCommand}" 
                                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                                Padding="15,8" Margin="0,0,0,5" Background="#F39C12" Foreground="White" BorderThickness="0"/>
                        <Button Content="مسح النموذج" Command="{Binding ClearFormCommand}" 
                                Padding="15,8" Background="#95A5A6" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <ProgressBar Grid.Row="8" IsIndeterminate="{Binding IsBusy}" Height="4" Margin="0,10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

