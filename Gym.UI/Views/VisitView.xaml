<UserControl x:Class="Gym.UI.Views.VisitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gym.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="{Binding FlowDirection}">
    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#E67E22" Padding="15" CornerRadius="5" Margin="0,0,0,10">
            <TextBlock Text="{Binding VisitManagementLabel}" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Visit List -->
            <Border Grid.Column="0" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5" Margin="0,0,10,0">
                <Grid Margin="15" FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10" 
                                HorizontalAlignment="{Binding RightAlignment}"
                                FlowDirection="RightToLeft">
                        <TextBlock Text="زيارات اليوم" FontSize="18" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="عدد الزيارات اليوم:" FontSize="14" FontWeight="Bold" 
                                   Margin="0,0,5,0" VerticalAlignment="Center" Foreground="#E67E22"/>
                        <TextBlock Text="{Binding TodayVisitsCount}" FontSize="14" FontWeight="Bold" 
                                   Margin="0,0,10,0" VerticalAlignment="Center" Foreground="#E67E22"/>
                        <Button Content="تحديث" Command="{Binding LoadVisitsCommand}" 
                                Padding="10,5" Background="#E67E22" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Visits}" 
                              SelectedItem="{Binding SelectedVisit}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              Background="White"
                              FlowDirection="{Binding FlowDirection}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="الرقم" Binding="{Binding Id}" Width="50" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="المتدرب" Binding="{Binding TraineeName}" Width="*" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="تاريخ الزيارة" Binding="{Binding VisitDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Right"/>
                                        <Setter Property="Margin" Value="5"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="حذف" Width="100">
                                <DataGridTemplateColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Right"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTemplateColumn.HeaderStyle>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="حذف" 
                                                Command="{Binding DataContext.DeleteVisitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                Margin="2" Padding="8,3" Background="#E74C3C" Foreground="White" BorderThickness="0"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Record Visit Form -->
            <Border Grid.Column="1" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
                <Grid Margin="15" FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Text="تسجيل زيارة" FontSize="16" FontWeight="Bold" 
                               Margin="0,0,0,15" 
                               HorizontalAlignment="{Binding CenterAlignment}"
                               FlowDirection="{Binding FlowDirection}"/>
                    
                    <StackPanel Grid.Row="1" Margin="0,0,0,15" FlowDirection="{Binding FlowDirection}">
                        <TextBlock Text="رقم المتدرب:" FontWeight="Bold" Margin="0,0,0,5" 
                                   HorizontalAlignment="{Binding RightAlignment}"/>
                        <TextBox Text="{Binding TraineeId, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="8" 
                                 BorderBrush="#BDC3C7"
                                 TextAlignment="{Binding TextAlignment}"
                                 FlowDirection="{Binding FlowDirection}"/>
                    </StackPanel>
                    
                    <StackPanel Grid.Row="2" Margin="0,0,0,10" FlowDirection="LeftToRight">
                        <Button Content="تسجيل زيارة" Command="{Binding AddVisitCommand}" 
                                Padding="15,8" Margin="0,0,0,5" Background="#27AE60" Foreground="White" BorderThickness="0"/>
                        <Button Content="مسح النموذج" Command="{Binding ClearFormCommand}" 
                                Padding="15,8" Background="#95A5A6" Foreground="White" BorderThickness="0"/>
                    </StackPanel>
                    
                    <!-- Membership Information Display -->
                    <Border Grid.Row="3" Background="#F8F9FA" BorderBrush="#E9ECEF" BorderThickness="1" CornerRadius="5" 
                            Margin="0,10,0,10" Padding="10" 
                            FlowDirection="{Binding FlowDirection}"
                            Visibility="{Binding ShowLastVisitInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel FlowDirection="{Binding FlowDirection}">
                            <TextBlock Text="معلومات العضوية" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" 
                                       HorizontalAlignment="{Binding CenterAlignment}" Foreground="#495057"/>
                            
                            <Grid FlowDirection="{Binding FlowDirection}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="اسم المتدرب:" FontWeight="Bold" 
                                           Margin="0,0,10,5" HorizontalAlignment="{Binding RightAlignment}"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding LastVisitTraineeName}" 
                                           Margin="0,0,0,5" TextAlignment="{Binding TextAlignment}"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="نوع العضوية:" FontWeight="Bold" 
                                           Margin="0,0,10,5" HorizontalAlignment="{Binding RightAlignment}"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding LastVisitMembershipType}" 
                                           Margin="0,0,0,5" TextAlignment="{Binding TextAlignment}"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="الجلسات المتبقية:" FontWeight="Bold" 
                                           Margin="0,0,10,5" HorizontalAlignment="{Binding RightAlignment}"
                                           Visibility="{Binding LastVisitRemainingSessions, Converter={StaticResource NullToVisibilityConverter}}"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding LastVisitRemainingSessions}" 
                                           Margin="0,0,0,5" TextAlignment="{Binding TextAlignment}"
                                           Visibility="{Binding LastVisitRemainingSessions, Converter={StaticResource NullToVisibilityConverter}}"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding LastVisitMessage}" 
                                           Margin="0,5,0,0" FontStyle="Italic" TextWrapping="Wrap"
                                           TextAlignment="{Binding TextAlignment}"
                                           Foreground="{Binding LastVisitIsActive, Converter={StaticResource BooleanToColorConverter}}"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <ProgressBar Grid.Row="4" IsIndeterminate="{Binding IsBusy}" Height="4" Margin="0,10"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>

