<UserControl x:Class="Gym.UI.Views.VisitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gym.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="{Binding FlowDirection}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0" Background="#6B46C1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header -->
        <Border Grid.Row="0" Background="Black" 
                Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="32" Height="32" Fill="White" Opacity="0.9" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding VisitManagementLabel}" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="20" Padding="12,8" Opacity="0.9">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="Black" Margin="0,0,8,0"/>
                            <TextBlock Text="إدارة الزيارات" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Visit List Card -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}">
                <Grid FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header with Statistics -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse Width="20" Height="20" Fill="Black" Margin="0,0,12,0"/>
                            <TextBlock Text="زيارات اليوم" FontSize="18" FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Today's Visit Count Badge -->
                        <Border Grid.Column="1" Background="{StaticResource AccentBrush}" CornerRadius="20" 
                                Padding="12,6" Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="عدد الزيارات:" FontSize="12" FontWeight="SemiBold" 
                                           Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding TodayVisitsCount}" FontSize="14" FontWeight="Bold" 
                                           Foreground="White" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Export Button -->
                        <Button Grid.Column="2" Content="تصدير تقرير" Command="{Binding ExportVisitsReportCommand}" 
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource SuccessBrush}"
                                Padding="16,8" FontSize="12" Margin="0,0,10,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="20" 
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="White" Margin="0,0,6,0"/>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Grid.Column="3" Content="تحديث" Command="{Binding LoadVisitsCommand}" 
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource InfoBrush}"
                                Padding="16,8" FontSize="12">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                                            CornerRadius="20" 
                                            Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="12" Height="12" Fill="White" Margin="0,0,6,0"/>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0891B2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                    <!-- Modern DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Visits}" 
                              SelectedItem="{Binding SelectedVisit}"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              EnableRowVirtualization="True"
                              EnableColumnVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              FlowDirection="{Binding FlowDirection}">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridHeaderStyle}"/>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="الرقم" Binding="{Binding Id}" MinWidth="60" Width="SizeToHeader" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="المتدرب" Binding="{Binding TraineeName}" MinWidth="160" Width="2*" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="Margin" Value="16,0"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="تاريخ الزيارة" Binding="{Binding VisitDate, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" MinWidth="140" Width="Auto" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn Header="الإجراءات" MinWidth="100" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Command="{Binding DataContext.DeleteVisitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButtonStyle}"
                                                Padding="8,4" FontSize="11">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{StaticResource DangerBrush}" 
                                                            CornerRadius="6" 
                                                            Padding="{TemplateBinding Padding}">
                                                        <TextBlock Text="حذف" Foreground="White" 
                                                                   FontSize="11" FontWeight="SemiBold" 
                                                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#DC2626"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Record Visit Form Card -->
            <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="12,0,12,0">
                <Grid FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Form Header -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                        <Ellipse Width="24" Height="24" Fill="Black" Margin="0,0,12,0"/>
                        <TextBlock Text="تسجيل زيارة" FontSize="18" FontWeight="Bold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Trainee ID Input -->
                    <StackPanel Grid.Row="1" Margin="0,0,0,20">
                        <TextBlock Text="رقم المتدرب:" FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding TraineeId, UpdateSourceTrigger=PropertyChanged}" 
                                 Style="{StaticResource ModernTextBoxStyle}"/>
                    </StackPanel>
                    
                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,20">
                        <Button Content="تسجيل زيارة" Command="{Binding AddVisitCommand}" 
                                Style="{StaticResource SecondaryButtonStyle}"
                                Padding="20,12" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        
                        <Button Content="مسح النموذج" Command="{Binding ClearFormCommand}" 
                                Background="{StaticResource TextMutedBrush}" Foreground="White"
                                Style="{StaticResource ModernButtonStyle}"
                                Padding="20,12" FontSize="14" FontWeight="SemiBold"/>
                    </StackPanel>
                    
                    <!-- Enhanced Membership Information Display -->
                    <Border Grid.Row="3" Background="{StaticResource BackgroundBrush}" 
                            BorderBrush="{StaticResource BorderBrush}" BorderThickness="2" 
                            CornerRadius="12" Margin="0,0,0,16" Padding="16" 
                            Visibility="{Binding ShowLastVisitInfo, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel>
                            <!-- Info Header -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16" HorizontalAlignment="Center">
                                <Ellipse Width="16" Height="16" Fill="White" Margin="0,0,8,0"/>
                                <TextBlock Text="معلومات العضوية" FontSize="14" FontWeight="Bold" 
                                           Foreground="White"/>
                            </StackPanel>
                            
                            <!-- Member Info Grid -->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Trainee Name -->
                                <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="اسم المتدرب" FontSize="11" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <TextBlock Text="{Binding LastVisitTraineeName}" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Membership Type -->
                                <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="12,8" Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="نوع العضوية" FontSize="11" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <Border Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding LastVisitMembershipType}" FontSize="12" FontWeight="SemiBold"
                                                       Foreground="Green"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Remaining Sessions -->
                                <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="12,8" Margin="0,0,0,8"
                                        Visibility="{Binding LastVisitRemainingSessions, Converter={StaticResource NullToVisibilityConverter}}">
                                    <StackPanel>
                                        <TextBlock Text="الجلسات المتبقية" FontSize="11" FontWeight="SemiBold" 
                                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,4"/>
                                        <Border Background="{StaticResource SecondaryBrush}" CornerRadius="6" Padding="8,4" HorizontalAlignment="Left">
                                            <TextBlock Text="{Binding LastVisitRemainingSessions}" FontSize="14" FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Status Message -->
                                <Border Grid.Row="3" CornerRadius="8" Padding="12,8">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <!-- Default background based on active membership -->
                                            <Setter Property="Background" Value="{Binding LastVisitIsActive, Converter={StaticResource BooleanToColorConverter}}"/>
                                            <Style.Triggers>
                                                <!-- Show red when trainee already checked in today -->
                                                <DataTrigger Binding="{Binding LastVisitMessage}" Value="المتدرب قام بتسجيل الدخول اليوم بالفعل">
                                                    <Setter Property="Background" Value="{StaticResource DangerBrush}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding LastVisitMessage}" FontSize="12" FontWeight="SemiBold"
                                               Foreground="White" TextWrapping="Wrap" TextAlignment="Center"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>
                    
                    <!-- Progress Bar -->
                    <ProgressBar Grid.Row="4" IsIndeterminate="{Binding IsBusy}" 
                                 Style="{StaticResource ModernProgressBarStyle}" 
                                 Margin="0,16,0,0"/>
                </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>

