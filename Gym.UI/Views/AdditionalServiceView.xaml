<UserControl x:Class="Gym.UI.Views.AdditionalServiceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Gym.UI"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             FlowDirection="{Binding FlowDirection}"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="0" Background="#6B46C1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Modern Header -->
        <Border Grid.Row="0" Background="Black" 
                Style="{StaticResource ModernCardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="32" Height="32" Fill="White" Opacity="0.9" Margin="0,0,16,0"/>
                    <TextBlock Text="{Binding AdditionalServiceManagementLabel}" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="White" CornerRadius="20" Padding="12,8" Opacity="0.9">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="Black" Margin="0,0,8,0"/>
                            <TextBlock Text="إدارة الخدمات الإضافية" FontSize="12" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Additional Services List Card -->
            <Border Grid.Column="0" Style="{StaticResource ModernCardStyle}">
                <Grid FlowDirection="{Binding FlowDirection}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- List Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20" FlowDirection="LeftToRight">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>   <!-- Refresh -->
                            <ColumnDefinition Width="Auto"/>   <!-- Export -->
                            <ColumnDefinition Width="*"/>      <!-- Spacer -->
                            <ColumnDefinition Width="Auto"/>   <!-- Search -->
                            <ColumnDefinition Width="*"/>      <!-- Spacer -->
                            <ColumnDefinition Width="Auto"/>   <!-- Title -->
                        </Grid.ColumnDefinitions>

                        <!-- Refresh (Left) -->
                        <Button Grid.Column="0" Content="تحديث" Command="{Binding LoadAdditionalServicesCommand}"
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource InfoBrush}"
                                Padding="16,8" FontSize="12" VerticalAlignment="Center">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                            <Ellipse Width="12" Height="12" Fill="White" Margin="0,0,6,0"/>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0891B2"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Export Button -->
                        <Button Grid.Column="1" Content="تصدير تقرير" Command="{Binding ExportAdditionalServicesReportCommand}" 
                                Style="{StaticResource ModernButtonStyle}" Background="{StaticResource SuccessBrush}" Padding="16,8" FontSize="12" VerticalAlignment="Center" Margin="10,0,0,0">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="20" Padding="{TemplateBinding Padding}">
                                        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                                            <Ellipse Width="12" Height="12" Fill="White" Margin="0,0,6,0"/>
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextBlock.Foreground="White"/>
                                        </StackPanel>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#059669"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Centered Search -->
                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Width="240" Height="40" FlowDirection="RightToLeft"
                                     Text="{Binding SearchTraineeId, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource ModernTextBoxStyle}" Padding="8,4" Tag="ادخل رقم المتدرب"/>
                            <Button Content="بحث" Command="{Binding SearchAdditionalServiceCommand}" Margin="8,0,0,0"
                                    Style="{StaticResource ModernButtonStyle}" Height="32" Padding="16,4"/>
                        </StackPanel>

                        <!-- Title (Right) -->
                        <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="قائمة الخدمات الإضافية" FontSize="18" FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Ellipse Width="20" Height="20" Fill="Black"/>
                        </StackPanel>
                    </Grid>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding AdditionalServices}" 
                              SelectedItem="{Binding SelectedAdditionalService}"
                              Style="{StaticResource ModernDataGridStyle}"
                              AutoGenerateColumns="False" 
                              CanUserAddRows="False"
                              FlowDirection="{Binding FlowDirection}">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource ModernDataGridHeaderStyle}"/>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="الرقم" Binding="{Binding Id}" Width="60" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="المتدرب" Binding="{Binding TraineeName}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#1F2937"/>
                                        <Setter Property="Margin" Value="16,0"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="نوع الخدمة" Binding="{Binding ServiceType}" Width="120" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="Foreground" Value="Green"/>
                                        <Setter Property="FlowDirection" Value="RightToLeft"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="السعر" Binding="{Binding Price, StringFormat='{}{0:F2} ج.م'}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="{StaticResource SecondaryBrush}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="المدة (دقيقة)" Binding="{Binding DurationInMinutes}" Width="100" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="تاريخ الخدمة" Binding="{Binding TakenAt, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn Header="الإجراءات" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Command="{Binding DataContext.EditAdditionalServiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource AccentButtonStyle}"
                                                    Padding="8,4" Margin="2" FontSize="11">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{StaticResource AccentBrush}" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <TextBlock Text="تعديل" Foreground="White" 
                                                                       FontSize="11" FontWeight="SemiBold" 
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#D97706"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                            
                                            <Button Command="{Binding DataContext.DeleteAdditionalServiceCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource DangerButtonStyle}"
                                                    Padding="8,4" Margin="2" FontSize="11">
                                                <Button.Template>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{StaticResource DangerBrush}" 
                                                                CornerRadius="6" 
                                                                Padding="{TemplateBinding Padding}">
                                                            <TextBlock Text="حذف" Foreground="White" 
                                                                       FontSize="11" FontWeight="SemiBold" 
                                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#DC2626"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="اخر تحديث" Binding="{Binding UpdatedAt, Converter={x:Static local:NullDateTimeConverter.Instance}}" Width="140" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="FontWeight" Value="Medium"/>
                                        <Setter Property="FontSize" Value="12"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Add/Edit Form Card -->
            <Border Grid.Column="2" Style="{StaticResource ModernCardStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="12,0,24,0">
                    <Grid FlowDirection="{Binding FlowDirection}" Margin="0,0,0,16">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    
                        <!-- Form Header -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,24" HorizontalAlignment="Center">
                            <Ellipse Width="24" Height="24" Fill="Black" Margin="0,0,12,0"/>
                            <TextBlock Text="إضافة خدمة إضافية جديدة" FontSize="18" FontWeight="Bold" 
                                       Foreground="#1F2937" VerticalAlignment="Center"/>
                        </StackPanel>
                    
                        <!-- Trainee ID Input (Add Mode) / Trainee Combo (Edit Mode) -->
                        <StackPanel Grid.Row="1" Margin="0,0,0,16">
                            <TextBlock Text="رقم المتدرب:" FontWeight="SemiBold" FontSize="14"
                                       Foreground="#1F2937" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding TraineeIdInput, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}"
                                     Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            <ComboBox ItemsSource="{Binding Trainees}" 
                                      SelectedValue="{Binding SelectedTraineeId, Mode=TwoWay}"
                                      SelectedValuePath="Id"
                                      Style="{StaticResource ModernComboBoxStyle}"
                                      FlowDirection="RightToLeft"
                                      Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FullName}" TextAlignment="Right"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    
                        <!-- Service Type -->
                        <StackPanel Grid.Row="2" Margin="0,0,0,16">
                            <TextBlock Text="نوع الخدمة:" FontWeight="SemiBold" FontSize="14"
                                       Foreground="#1F2937" Margin="0,0,0,8"/>
                            <ComboBox ItemsSource="{Binding ServiceTypes}" 
                                      SelectedItem="{Binding ServiceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource ModernComboBoxStyle}" FlowDirection="RightToLeft">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextAlignment="Right"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>
                    
                        <!-- Duration Input (Only for "مشاية") -->
                        <StackPanel Grid.Row="3" Margin="0,0,0,16">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ServiceType}" Value="مشاية">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="المدة (بالدقائق):" FontWeight="SemiBold" FontSize="14"
                                       Foreground="#1F2937" Margin="0,0,0,8"/>
                            <TextBox Text="{Binding DurationInMinutes, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource ModernTextBoxStyle}"/>
                        </StackPanel>
                    
                        <!-- Price Information -->
                        <StackPanel Grid.Row="4" Margin="0,0,0,16">
                            <TextBlock Text="معلومات الأسعار:" FontWeight="SemiBold" FontSize="14"
                                       Foreground="#1F2937" Margin="0,0,0,8"/>
                            <Border Background="#F3F4F6" CornerRadius="8" Padding="12,8">
                                <StackPanel>
                                    <TextBlock Text="مشاية: 1.5 جنيه/دقيقة" FontSize="12" Foreground="#6B7280" Margin="0,2"/>
                                    <TextBlock Text="ميزان: 5 جنيه" FontSize="12" Foreground="#6B7280" Margin="0,2"/>
                                    <TextBlock Text="جنيه 10 :InBody" FontSize="12" Foreground="#6B7280" Margin="0,2"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    
                        <!-- Action Buttons -->
                        <StackPanel Grid.Row="5" Margin="0,0,0,16">
                            <Button Content="إضافة خدمة" Command="{Binding AddAdditionalServiceCommand}" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                    Padding="20,12" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        
                            <Button Content="تحديث خدمة" Command="{Binding UpdateAdditionalServiceCommand}" 
                                    Style="{StaticResource AccentButtonStyle}"
                                    Visibility="{Binding IsEditMode, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Padding="20,12" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,12"/>
                        
                            <Button Content="مسح النموذج" Command="{Binding ClearFormCommand}" 
                                    Background="{StaticResource TextMutedBrush}" Foreground="White"
                                    Style="{StaticResource ModernButtonStyle}"
                                    Padding="20,12" FontSize="14" FontWeight="SemiBold"/>
                        </StackPanel>
                    
                        <!-- Progress Bar -->
                        <ProgressBar Grid.Row="6" IsIndeterminate="{Binding IsBusy}" 
                                     Style="{StaticResource ModernProgressBarStyle}" 
                                     Margin="0,16,0,0"/>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>